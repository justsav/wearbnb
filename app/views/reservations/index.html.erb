<div class="cart-bg">
  <div class="container-cart">
    <div class="cart-title">
      <h2>My Reservations</h2>
    </div>
    <table>
      <thead>
        <tr style="border-bottom: .5px solid lightgray">
          <th class="header-cart" style="width: 200px">Clothing Item</th>
          <th class="header-cart" style="width: 200px">Rental Dates</th>
          <th class="header-cart" style="width: 50px">Remove</th>
          <th class="header-cart" style="width: 50px">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @reservations.each do |res| %>
        <% if res.status == 'pending' %>
        <tr style="border-bottom: .5px solid lightgray">
          <td style="font-size: 20px">
            <%= image_tag(res.clothing_item.picture, class:"cart-image") %> <%=res.clothing_item.name %>
          </td>
          <td style="text-align: center">
            <p><%= res.begin_date.strftime('%b %d') %> - <%= res.end_date.strftime('%b %d %Y') %></p>
          </td>
          <td style="text-align: center">
            <p><%= link_to 'X', reservation_path(res.id), method: :delete %> </p>
          </td>
          <td style="text-align: center">
            <p>$<%= res.clothing_item.price %></p>
          </td>
        </tr>
        <% end %>
        <% end %>
        <tr class="cart-subtotal">
          <td style="width: 370px"></td>
          <td></td>
          <td><p><%= @subtotal_label %></p></td>
          <td><p><%= @subtotal %></p></td>
        </tr>
        <tr><td colspan="4" style="text-align: center"><p><%= @empty_cart %></p></td></tr>
      </tbody>
    </table>
    <div class="cart-action">
    <%= link_to 'Continue Shopping', clothing_items_path, class: 'btn btn-secondary' %>
    <%= link_to 'Checkout', edit_reservation_path(@reservations), class: 'btn btn-primary' %>
    </div>
  </div>
</div>
