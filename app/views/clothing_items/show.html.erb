<div class="item-info-container">
  <div class="item-image">
    <%= image_tag @clothing_item.picture, class: 'item-img' %>
  </div>
  <div class="item-info">
    <div class="calendar">
      <%= form_for [@clothing_item, @reservation] do |f| %>
      <%= f.text_field :begin_date, id:'date-picker', placeholder: 'Choose your dates..' %>
    </div>
    <div class="item-contents">
      <ul>
        <li id="item-name"><h2><%= @clothing_item.name.upcase %></h2></li>
        <li id="item-price"><h2>$<%= @clothing_item.price %></h2></li>
      </ul>
      <p><%= @clothing_item.description %></p>
        <div data-toggle="modal" data-target="#successModal">
        <%= f.submit "Add to cart", class: "btn btn-outline-dark submit-button" %>
      </div>
      <% end %>
    </div>
  </div>


  <!-- Modal -->
  <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="successModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>


